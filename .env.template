# ==================================================================
# Lead G - Environment Variables Template
# ==================================================================
# Copy this file and create:
# - backend/.env (for backend configuration)
# - frontend/.env (for frontend configuration)
# ==================================================================

# ==================================================================
# BACKEND ENVIRONMENT VARIABLES (backend/.env)
# ==================================================================

# Firebase Configuration
# Get these from Firebase Console (https://console.firebase.google.com/)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CREDENTIALS_PATH=/path/to/your/firebase-credentials.json

# MongoDB Configuration (if using MongoDB)
# Format: mongodb://localhost:27017/database_name
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database_name
MONGO_URL=mongodb://localhost:27017/leadg

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT Secret Key (for authentication)
# Generate a secure random string: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-me-in-production

# JWT Settings
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# Application Settings
ENVIRONMENT=development
DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=8001

# Database Settings
DATABASE_NAME=leadg
MAX_CONNECTIONS=100
TIMEOUT_MS=5000

# Email Configuration (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@leadg.com

# API Keys (optional - for third-party integrations)
SENDGRID_API_KEY=your-sendgrid-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# ==================================================================
# FRONTEND ENVIRONMENT VARIABLES (frontend/.env)
# ==================================================================

# Backend API URL
# Local development: http://localhost:8001
# Production: https://api.yourdomain.com
REACT_APP_BACKEND_URL=http://localhost:8001

# Environment
REACT_APP_ENVIRONMENT=development

# Firebase Configuration (optional - for client-side Firebase features)
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-firebase-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
REACT_APP_FIREBASE_APP_ID=your-app-id

# Analytics (optional)
REACT_APP_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
REACT_APP_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Feature Flags (optional)
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_TRACKING=false

# API Endpoints (optional - if different from backend URL)
REACT_APP_API_BASE_URL=http://localhost:8001/api

# ==================================================================
# PRODUCTION SETTINGS
# ==================================================================
# When deploying to production:
# 1. Set ENVIRONMENT=production
# 2. Set DEBUG=False
# 3. Use HTTPS URLs (https://)
# 4. Use strong JWT_SECRET_KEY
# 5. Restrict CORS_ORIGINS to your domain only
# 6. Use environment-specific database URLs
# ==================================================================

# ==================================================================
# NOTES
# ==================================================================
# - Never commit .env files to version control
# - Add .env to .gitignore
# - Use different values for development, staging, and production
# - Keep secrets secure and rotate regularly
# - Use environment variable management services in production
#   (AWS Secrets Manager, Azure Key Vault, Google Secret Manager)
# ==================================================================
